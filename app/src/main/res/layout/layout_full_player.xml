<?xml version="1.0" encoding="utf-8"?><!-- Full Player Layout -->
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <uk.akane.accord.ui.components.BlendView
        android:id="@+id/blend_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/eg"
        android:layout_gravity="center"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="24dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.Accord.ActionPanel.FullPlayer.Cover.Shape"
        />

    <uk.akane.cupertino.widget.OverlayTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:textSize="19sp"
        android:includeFontPadding="false"
        android:layout_marginTop="36dp"
        android:text="食人梦"
        android:layout_marginHorizontal="@dimen/full_cover_radius"
        app:textViewLayer="standard"
        app:layout_constraintTop_toBottomOf="@id/cover"
        app:layout_constraintStart_toStartOf="@id/cover"
        app:layout_constraintEnd_toEndOf="@id/cover"
        />

    <uk.akane.cupertino.widget.OverlayTextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textSize="19sp"
        android:includeFontPadding="false"
        android:text="VH (Vast &amp; Hazy)"
        app:textViewLayer="primary"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        />

    <uk.akane.cupertino.widget.divider.OverlayDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <uk.akane.cupertino.widget.slider.OverlaySlider
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:paddingVertical="4dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:momentum="false"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <uk.akane.cupertino.widget.button.OverlayButton
        android:id="@+id/list"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_marginBottom="36dp"
        app:iconSize="32dp"
        app:viewLayer="primary"
        app:icon="@drawable/ic_bulletin_select"
        app:layout_constraintStart_toEndOf="@id/airplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <uk.akane.cupertino.widget.button.OverlayButton
        android:id="@+id/airplay"
        android:layout_height="48dp"
        android:layout_width="48dp"
        app:iconSize="32dp"
        app:viewLayer="primary"
        app:icon="@drawable/ic_airplay_radio"
        app:layout_constraintStart_toEndOf="@id/caption"
        app:layout_constraintEnd_toStartOf="@id/list"
        app:layout_constraintTop_toTopOf="@id/list"
        app:layout_constraintBottom_toBottomOf="@id/list"
        />

    <uk.akane.cupertino.widget.button.OverlayButton
        android:id="@+id/caption"
        android:layout_height="48dp"
        android:layout_width="48dp"
        app:iconSize="32dp"
        app:viewLayer="primary"
        app:icon="@drawable/ic_quote_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/airplay"
        app:layout_constraintTop_toTopOf="@id/list"
        app:layout_constraintBottom_toBottomOf="@id/list"
        />

    <uk.akane.cupertino.widget.button.StarTransformButton
        android:id="@+id/star"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/ellipsis"
        app:layout_constraintBottom_toBottomOf="@id/ellipsis"
        app:layout_constraintEnd_toStartOf="@id/ellipsis"
        />

    <uk.akane.cupertino.widget.button.OverlayBackgroundButton
        android:id="@+id/ellipsis"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/full_cover_radius"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/subtitle"
        app:layout_constraintEnd_toEndOf="@id/cover"
        app:icon="@drawable/ic_ellipsis"
        app:iconSize="28dp"
        />

    <uk.akane.cupertino.widget.image.OverlayHintView
        android:id="@+id/speaker_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/list"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/ic_speaker_2dp"
        />

    <uk.akane.cupertino.widget.image.OverlayHintView
        android:id="@+id/speaker_full_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/speaker_hint"
        app:layout_constraintBottom_toBottomOf="@id/speaker_hint"
        app:layout_constraintEnd_toEndOf="@id/ellipsis"
        app:icon="@drawable/ic_speaker_full_2dp"
        />

    <uk.akane.cupertino.widget.slider.OverlaySlider
        android:id="@+id/volume_slider"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="-2dp"
        android:paddingVertical="4dp"
        app:overshoot="true"
        app:layout_constraintTop_toTopOf="@id/speaker_hint"
        app:layout_constraintBottom_toBottomOf="@id/speaker_hint"
        app:layout_constraintStart_toEndOf="@id/speaker_hint"
        app:layout_constraintEnd_toStartOf="@id/speaker_full_hint"
        />

    <include
        layout="@layout/layout_full_player_lyrics"
        />

</merge>